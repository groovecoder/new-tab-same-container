{
  "manifest_version": 2,
  "name": "New Tab in Same Container",
  "version": "1.1",

  "description": "Makes the New Tab command open a tab in the same container as the current tab.",
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "homepage_url": "https://addons.mozilla.org/",

  "permissions": [
    "contextualIdentities",
    "cookies",
    "tabs"
  ]

}

